body {
color: #30A0F2;
font-size: 8pt;
font-family: Verdana, 'Arial CE', 'Helvetica CE', Arial, Helvetica;
text-decoration: none;
margin: 0px;
background-color: #000000;
background-image: url('http://www.ppe.sk/wallpaper/police%20black.jpg');
background-attachment: fixed;
background-repeat: no-repeat;
background-position: center center;
scrollbar-shadow-color: #30A0F2;
scrollbar-highlight-color: #000000;
scrollbar-3dlight-color: #30A0F2;
scrollbar-base-color: #000000;
scrollbar-darkshadow-color: #000000;
scrollbar-track-color: #000000;
scrollbar-arrow-color: #000000;
}

#t1 {
position: fixed;
top: 0px;
left: 0px;
text-align: center;
background-image: url('http://www.ppe.sk/wallpaper/police%20black.jpg');
_background-image: none;
background-color: transparent;
width: 100%;
height: 20px;
z-index: 3;
_position: absolute;
_top: expression((ignore=document.documentElement.scrollTop?document.documentElement.scrollTop:document.body.scrollTop)+'px');
}

#corr {
position:relative;
height: 20px;
}

inframe {
width: 90%;
height:230px;
}

textarea.small {
width: 90%;
height: 42px;
border-color: #30A0F2;
background-color: transparent;
overflow: hidden;
color: white;
}

a {
color: white;
font-size: 8pt;
text-decoration: none;
border-bottom: 1px solid transparent;
_border-bottom: 1px solid none;
}

a:hover {
border-bottom: 1px solid red;
}

a.mail {
color: red;
font-size: 8pt;
font-weight: bold;
text-align: center;
text-decoration: none;
}

.active_user_img a {
border-bottom: 1px solid none;
}
.active_user_img img {
width: 50px; height:50px; border: 0;
}
.active_user_img a:hover {
border-bottom: 1px solid red;
}

td {
font-size: 8pt;
wordwrap: break-word;
}

table[width='666'] {
background-image: url('http://www.ppe.sk/wallpaper/police%20black.jpg');
}

.bordered {
border: solid 1px #113377;
}

.bordered2 {
border-left: solid 1px #30A0F2;
border-right: solid 1px #30A0F2;
border-bottom: solid 1px #30A0F2;
}

input {
color: white;
font-size: 8pt;
font-family: Verdana, 'Arial CE', 'Helvetica CE', Arial, Helvetica;
background-color: transparent;
vertical-align: middle;
border: solid 1px #30A0F2;
height: 18px
}

input[type=submit], button {
color: #30A0F2;
border: 1px solid #30A0F2;
}

input[type=submit]:focus, button:focus {
background-color: #30A0F2;
color: #000000;
}

input.small {
color: white;
font-size: 8pt;
background-color: transparent;
width: 50px;
vertical-align: middle;
border: solid 1px #30A0F2;
height: 18px
}

input[type=checkbox] {
background-color: transparent;
color: #ffffff;
border: 1px solid #30A0F2;
}

select {
color: #30A0F2;
font-size: 8pt;
background-color: transparent;
width: 80px;
vertical-align: middle;
border: solid 1px #1d62ae;
height: 18px;
_background-color: #000000;
}

select:focus, select:hover {
background-color: #000000;
}

.header td {
height: 100%;
width: 100%;
vertical-align: top;
padding: 0pt; width: 100%;
background-image: url('');
_background-image: none;
}

.important {
font-weight: bold;
text-align: center;
}

.most_important {
font-weight: bold;
color: red;
}

.active_users .active_user_img {
width: 50px;
float: left;
}

.active_users .active_user_name {
text-align: center;
}

textarea {
width : 666px;
height: 123px;
background-color: transparent;
border: 1px solid #1d62ae;
color: white;
font-family: monospace;
font-size: 8pt;
}

textarea:focus {
border: 1px solid #ffffff;
color: #30A0F2;
}

input[type=text]:focus {
border: 1px solid #30A0F2;
color: #30A0F2;
}

textarea.node_content {
width : 800px;
height: 666px;
background-color: transparent;
border: 1px solid #1d62ae;
color: white;
}

textarea.node_content:focus {
border: 1px solid #ffffff;
color: #30A0F2;
}

input[value='delete'] {
position: fixed;
right: 10px;
bottom: 10px;
}

input[value='put'] {
position: fixed;
right: 66px;
bottom: 10px;
}

select[name='nodeshell_id'] {
position: fixed;
right: 105px;
bottom: 10px;
}

object {
position:absolute;
top: -99px;
width: 36px;
border-bottom: 4px solid #30A0F2;
}

#panel {
position: absolute;
top: 0px;
left: 0px;
display: none;
z-index: 23;
color: #30A0F2;
background-image: url('http://www.ppe.sk/wallpaper/police%20black.jpg');
_background: #000000;
border: 1px solid #30A0F2;
padding: 2px;
margin: 0;
}
#panel .panel_btn {
border: 0;
color: #30A0F2;
background: transparent;
margin: 0;
padding: 1px 0 1px 0;
}
#panel .panel_btn:hover {
color: #30A0F2;
}
#panel form {
padding: 0;
margin: 0;
}